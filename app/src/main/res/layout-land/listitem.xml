<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
  android:background="#FFFFFF"
    android:paddingBottom="4dip"
    android:paddingLeft="12dip">


    <TextView
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:gravity="center"

        android:textColor="#9b2fdd"
        android:text="New Text"
        android:id="@+id/itemText"
        android:textAlignment="center"
        android:layout_below="@+id/itemTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:background="@drawable/manvoice"
        android:id="@+id/manvoice"
        android:focusable="false"
        android:layout_toLeftOf="@+id/girlvoice"
        android:layout_toStartOf="@+id/girlvoice"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:background="@drawable/girlvoice"
        android:id="@+id/girlvoice"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:gravity="center"
        android:textColor="#9b2fdd"
        android:text="New Text"
        android:id="@+id/itemTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

