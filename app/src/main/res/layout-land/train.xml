<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textSize="36dp"
        android:textColor="#9b2fdd"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/title"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView20" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/method"
        android:textColor="#9b2fdd"
        android:background="@drawable/biankuang"
        android:gravity="center"
        android:layout_below="@+id/textView32"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/textView32"
        android:textSize="20dp"

        android:layout_below="@+id/introduce"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/recognition"
        android:textColor="#9b2fdd"
        android:background="@drawable/biankuang"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/textView34"
      />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:id="@+id/textView34"
        android:textSize="26dp"
        android:layout_below="@+id/method"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="返回主菜单"
        android:layout_width="match_parent"
        android:layout_height="80dp"
       android:layout_below="@+id/recognition"
       android:background="#FFFFFF"
        android:id="@+id/rtn" />

    <TextView
        android:background="@drawable/csu"
        android:layout_width="246dp"
        android:layout_height="46dp"
        android:id="@+id/csulogo"
        android:layout_centerHorizontal="true"
       android:layout_below="@+id/rtn" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:textSize="20dp"
        android:textColor="#9b2fdd"

        android:id="@+id/introduce"
        android:background="@drawable/biankuang"
        android:gravity="center"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</ScrollView>

