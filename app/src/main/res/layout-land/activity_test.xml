<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

                                            >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/biyinbtn"
        android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="1420dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sec2"
            android:id="@+id/button6"
            android:layout_below="@+id/textView4"
         android:layout_alignLeft="@+id/biyinbtn" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/button7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="1420dp"
        android:layout_height="200dp"
        android:background="@drawable/sec4"
        android:id="@+id/button8"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/button7"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/button7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:layout_above="@+id/textView23"
        android:layout_below="@+id/button8"
         />

    <TextView
        android:layout_width="246dp"
        android:layout_height="46dp"
        android:background="@drawable/csu"
        android:id="@+id/textView23"
        android:layout_below="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="1420dp"
        android:layout_height="200dp"
        android:background="@drawable/sec3"
        android:id="@+id/button7"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/biyinbtn"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="欢迎进行字读音测试"
        android:textColor="#902fe1"
        android:gravity="center"
        android:textSize="35dp"
        android:id="@+id/zititle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="1420dp"
        android:background="@drawable/sec1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/biyinbtn"
        android:layout_height="200dp"
        android:layout_below="@+id/zititle"
         />


</RelativeLayout>
    </ScrollView>